{
  "extends": "@orbita/tsconfig/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@orbita/ui/*": ["../../packages/ui/src/*"],
      "@orbita/client/*": ["../../packages/prisma/*"]
    },
    "strictNullChecks": true,
    "experimentalDecorators": true
  },
  "include": [
    "next-env.d.ts",
    "next.config.mjs",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "tailwind.config.ts"
  ],
  "exclude": ["node_modules"]
}