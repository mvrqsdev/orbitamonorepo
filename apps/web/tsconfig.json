{
  "extends": "@orbita/tsconfig/nextjs.json",
  "compilerOptions": {
    "lib": ["ES2022", "dom", "dom.iterable"],
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@orbita/ui/*": ["../../packages/ui/src/*"],
      "@prisma/client/*": ["@orbita/prisma/client/*"],
    },
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "plugins": [{"name" : "next"}]
  },
  "include": [
    "next-env.d.ts",
    "next.config.mjs",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "tailwind.config.ts"
  ],
  "exclude": ["node_modules", ".next"]
}